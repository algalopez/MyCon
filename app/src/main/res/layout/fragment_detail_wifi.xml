        android:gravity="center_vertical"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:id="@+id/detail_wifi_networkdns2_res_tv"
        android:text="@string/wifi_networkDns2"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/item_res_margin"/>



</LinearLayout>
</ScrollView>